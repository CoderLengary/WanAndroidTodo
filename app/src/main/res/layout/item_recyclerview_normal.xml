<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="todo"
            type="com.example.lengary_l.wanandroidtodo.data.TodoDetailData"/>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
    </data>
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_vertical_margin_half"
        android:layout_marginEnd="@dimen/activity_margin_half"
        android:layout_marginStart="@dimen/activity_margin_half"
        android:layout_marginTop="@dimen/card_vertical_margin_half"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    app:imageBGFromType="@{todo.type}"
                    android:id="@+id/circleView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center" />

                <ImageView
                    app:imageFromType="@{todo.type}"
                    android:id="@+id/imgType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_margin_half"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="24sp"
                    android:text="@{todo.title}"
                    tools:text="宇宙的秘密" />

                <TextView
                    android:id="@+id/textContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp"
                    android:text="@{todo.content}"
                    tools:text="电子的运动是无规律的，它以概率波的形式运动，你无法准确地预料到电子将会出现在哪一个位置" />

                <TextView
                    android:id="@+id/textCompletedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:textColor="@color/colorSecondaryText"
                    app:visibleFromStatus = "@{todo.status}"
                    android:text="@{@string/home_complete_date+todo.completeDateStr}"
                    tools:text="Complete date: 2019:02:14" />
            </LinearLayout>

            <ImageView
                android:onClick="@{clickListener}"
                android:id="@+id/imgCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:tint="@color/colorNavItemUnselected" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>


